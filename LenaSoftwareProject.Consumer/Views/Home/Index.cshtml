            $(".getFormById").click(function()
            {
                var Id = $(this).attr('id');

                $.ajax({

                    url: "https://localhost:44362/FormDetail/GetFormById",
                    method:"post",
                    data: { Id: Id },
                    success: function (response) {
                        if (response.isSuccess) {
                            window.location.href = "/FormDetail/Index";
                        }
                        else {
                            Swal.fire
                            ({

                                icon: 'error',
                                title: 'İşlem Başarısız',
